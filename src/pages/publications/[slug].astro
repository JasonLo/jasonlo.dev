---
/**
 * Publication Detail Page
 *
 * Redirects to the DOI URL for external publications,
 * or shows a fallback page if no DOI is available.
 *
 * Route: /publications/[slug]
 *
 * @page
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';
import BackLink from '../../components/BackLink.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('publications', ({ data }) => {
    return data.draft === false;
  });
  return articles.map((article) => ({
    params: { slug: article.id },
  }));
}

const { slug } = Astro.params;
const article = await getEntry('publications', slug!);

if (!article) {
  return Astro.redirect('/404');
}

// Redirect to DOI if available
if (article.data.doi) {
  return Astro.redirect(article.data.doi);
}

const { title, description, authors, journal, publishDate, citedByCount, tags } = article.data;
const year = publishDate.getFullYear();
---

<BaseLayout>
  <SEO
    slot="head"
    title={`${title} - Publications`}
    description={description}
    type="article"
    publishDate={publishDate}
  />

  <main class="article">
    <header class="article-header">
      <h1>{title}</h1>
      <p class="article-authors">{authors.join(', ')}</p>
      <div class="article-meta">
        <span>{journal}</span>
        <span class="meta-separator">·</span>
        <span>{year}</span>
        {citedByCount > 0 && (
          <>
            <span class="meta-separator">·</span>
            <span>{citedByCount} citations</span>
          </>
        )}
      </div>
      {tags && tags.length > 0 && (
        <div class="article-tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <p class="article-description">{description}</p>

    <BackLink href="/publications" text="All publications" />
  </main>

  <style>
    .article {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .article-header {
      margin-bottom: 2rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--color-border);
    }

    .article-header h1 {
      font-size: 2rem;
      margin-bottom: 1rem;
      font-weight: 700;
      letter-spacing: -0.02em;
      line-height: 1.3;
    }

    .article-authors {
      font-size: 1rem;
      color: var(--color-text-secondary);
      line-height: 1.6;
      margin-bottom: 1rem;
    }

    .article-meta {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.9375rem;
      color: var(--color-text-muted);
    }

    .meta-separator {
      opacity: 0.5;
    }

    .article-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .tag {
      font-size: 0.8125rem;
      padding: 0.25rem 0.75rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 4px;
      color: var(--color-text-secondary);
    }

    .article-description {
      font-size: 1.125rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
      margin-bottom: 2rem;
    }

    @media (max-width: 768px) {
      .article-header h1 {
        font-size: 1.5rem;
      }
    }
  </style>
</BaseLayout>
