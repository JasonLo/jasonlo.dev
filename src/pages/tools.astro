---
import ListLayout from '../components/ListLayout.astro';
import ArrowLink from '../components/ArrowLink.astro';
import { getCollection } from 'astro:content';
import { pagesConfig } from '../pages.config';

const allTools = await getCollection('tools', ({ data }) => {
  return data.draft !== true;
});

// Default sort: favorites first, then by date descending
const sortedTools = [...allTools].sort((a, b) => {
  if (a.data.is_favorite !== b.data.is_favorite) return a.data.is_favorite ? -1 : 1;
  return b.data.date.getTime() - a.data.date.getTime();
});
---

<ListLayout
  title={pagesConfig.tools.heading}
  intro={pagesConfig.tools.intro}
  description={pagesConfig.tools.description}
  itemCount={sortedTools.length}
  itemLabel="items"
  sortOptions={[
    { key: 'favorite', label: 'Favorite' },
    { key: 'recent', label: 'Recent' },
    { key: 'name', label: 'Name' }
  ]}
  defaultSort="favorite"
  listId="tools-list"
  emptyMessage="No tools documented yet."
  pageSize={15}
>
  {sortedTools.map((item) => {
    const RowTag = item.data.url ? 'a' : 'div';
    return (
      <RowTag
        id={item.id}
        class="row-item"
        data-sort-favorite={(item.data.is_favorite ? 1e13 : 0) + item.data.date.getTime()}
        data-sort-recent={item.data.date.getTime()}
        data-sort-name={item.data.name.toLowerCase()}
        {...(item.data.url && { href: item.data.url, target: '_blank', rel: 'noopener noreferrer' })}
      >
        <div class="row-date">{item.data.date.getFullYear()}</div>
        <div class="row-body">
          <div class="row-title-line">
            <span class="row-title">{item.data.name}</span>
            {item.data.is_favorite && (
              <span class="best-badge">Favorite</span>
            )}
          </div>
          <span class="row-desc">{item.data.description}</span>
          {(item.data.license || (item.data.tags && item.data.tags.length > 0)) && (
            <div class="tags-list">
              {item.data.license && (
                <span class="license-badge">{item.data.license}</span>
              )}
              {item.data.tags && item.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
          <div class="row-details">
            <div class="detail-item">
              <span class="detail-label">Best for:</span>
              <span class="detail-text">{item.data.best_for}</span>
            </div>
            {item.data.not_for && (
              <div class="detail-item">
                <span class="detail-label">Not for:</span>
                <span class="detail-text">{item.data.not_for}</span>
              </div>
            )}
            {item.data.personal_remarks && (
              <div class="detail-item">
                <span class="detail-label">Notes:</span>
                <span class="detail-text">{item.data.personal_remarks}</span>
              </div>
            )}
          </div>
        </div>
        <div class="row-arrow">
          <ArrowLink text="" icon="external" variant="muted" />
          {item.data.url && <span class="visually-hidden"> (opens in new tab)</span>}
        </div>
      </RowTag>
    );
  })}
</ListLayout>

<style>
  .row-item {
    grid-template-columns: 3.5rem 1fr 1.5rem;
    align-items: start;
    scroll-margin-top: 10vh;
  }

  .row-item:target {
    background: var(--color-bg-elevated);
    border-color: var(--color-accent);
  }

  .row-date {
    font-size: 0.875rem;
    font-variant-numeric: tabular-nums;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .row-title-line {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }


  .best-badge {
    font-size: 0.6875rem;
    padding: 0.125rem 0.5rem;
    border-radius: 3px;
    background: var(--color-accent);
    color: var(--color-bg);
    font-weight: 600;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.5rem;
  }

  .license-badge {
    font-size: 0.6875rem;
    padding: 0.125rem 0.4375rem;
    border-radius: 3px;
    background: var(--color-accent-muted);
    color: var(--color-accent);
    font-weight: 500;
  }

  .tag {
    font-size: 0.6875rem;
    padding: 0.125rem 0.4375rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 3px;
    color: var(--color-text-secondary);
  }

  .row-details {
    margin-top: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .detail-item {
    display: flex;
    gap: 0.375rem;
    font-size: 0.8125rem;
    line-height: 1.5;
  }

  .detail-label {
    color: var(--color-text-secondary);
    font-weight: 500;
    flex-shrink: 0;
  }

  .detail-text {
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .row-item {
      grid-template-columns: 1fr 1.5rem;
    }

    .row-date {
      display: none;
    }
  }
</style>
