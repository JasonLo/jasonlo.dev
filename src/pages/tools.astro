---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import PageStats from '../components/PageStats.astro';
import { getCollection } from 'astro:content';
import { pagesConfig } from '../pages.config';

const allTools = await getCollection('tools', ({ data }) => {
  return data.draft !== true;
});

const sortedTools = allTools.sort((a, b) => {
  if (a.data.is_favorite !== b.data.is_favorite) {
    return a.data.is_favorite ? -1 : 1;
  }
  return b.data.date.getTime() - a.data.date.getTime();
});
---

<BaseLayout>
  <SEO
    slot="head"
    title={pagesConfig.tools.title}
    description={pagesConfig.tools.description}
    type="website"
  />

  <main class="page-container">
    <header class="page-header">
      <h1 class="page-title">{pagesConfig.tools.heading}</h1>
      <p class="page-intro">
        {pagesConfig.tools.intro}
      </p>
      <div class="page-controls">
        <PageStats text={`${sortedTools.length} items`} />
        <div class="sort-controls">
          <span class="sort-label">Sort by</span>
          <button class="sort-btn active" data-sort="favorite">Favorite</button>
          <button class="sort-btn" data-sort="recent">Recent</button>
          <button class="sort-btn" data-sort="name">Name</button>
        </div>
      </div>
    </header>

    {sortedTools.length > 0 ? (
      <div class="row-list" id="tools-list">
        {sortedTools.map((item) => (
          <div
            class="row-item"
            data-date={item.data.date.getTime()}
            data-name={item.data.name}
            data-favorite={item.data.is_favorite ? "true" : "false"}
          >
            <div class="row-date">{item.data.date.getFullYear()}</div>
            <div class="row-body">
              <div class="row-title-line">
                {item.data.url ? (
                  <a href={item.data.url} class="row-title" target="_blank" rel="noopener noreferrer">
                    {item.data.name}
                    <span class="external-icon">â†—</span>
                  </a>
                ) : (
                  <span class="row-title">{item.data.name}</span>
                )}
                {item.data.is_favorite && (
                  <span class="best-badge">Favorite</span>
                )}
              </div>
              <span class="row-desc">{item.data.description}</span>
              {(item.data.license || (item.data.tags && item.data.tags.length > 0)) && (
                <div class="tags-list">
                  {item.data.license && (
                    <span class="license-badge">{item.data.license}</span>
                  )}
                  {item.data.tags && item.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
              <div class="row-details">
                <div class="detail-item">
                  <span class="detail-label">Best for:</span>
                  <span class="detail-text">{item.data.best_for}</span>
                </div>
                {item.data.not_for && (
                  <div class="detail-item">
                    <span class="detail-label">Not for:</span>
                    <span class="detail-text">{item.data.not_for}</span>
                  </div>
                )}
                {item.data.personal_remarks && (
                  <div class="detail-item">
                    <span class="detail-label">Notes:</span>
                    <span class="detail-text">{item.data.personal_remarks}</span>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <p class="empty-state">No tools documented yet.</p>
    )}
  </main>
</BaseLayout>

<style>
  .page-controls {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .row-item {
    grid-template-columns: 3.5rem 1fr;
  }

  .row-date {
    font-size: 0.875rem;
    font-variant-numeric: tabular-nums;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .row-title-line {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .row-title a {
    color: var(--color-text);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .row-title a:hover {
    color: var(--color-accent);
  }

  .external-icon {
    font-size: 0.75rem;
    opacity: 0.6;
  }

  .best-badge {
    font-size: 0.6875rem;
    padding: 0.125rem 0.5rem;
    border-radius: 3px;
    background: var(--color-accent);
    color: var(--color-bg);
    font-weight: 600;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.5rem;
  }

  .license-badge {
    font-size: 0.6875rem;
    padding: 0.125rem 0.4375rem;
    border-radius: 3px;
    background: var(--color-accent-muted);
    color: var(--color-accent);
    font-weight: 500;
  }

  .tag {
    font-size: 0.6875rem;
    padding: 0.125rem 0.4375rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 3px;
    color: var(--color-text-secondary);
  }

  .row-details {
    margin-top: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .detail-item {
    display: flex;
    gap: 0.375rem;
    font-size: 0.8125rem;
    line-height: 1.5;
  }

  .detail-label {
    color: var(--color-text-secondary);
    font-weight: 500;
    flex-shrink: 0;
  }

  .detail-text {
    color: var(--color-text-muted);
  }

  .sort-controls {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .sort-label {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .row-item {
      grid-template-columns: 1fr;
    }

    .row-date {
      display: none;
    }
  }
</style>

<script>
  const list = document.getElementById('tools-list');
  const buttons = document.querySelectorAll<HTMLButtonElement>('.sort-btn');

  function sortList(key: string) {
    if (!list) return;
    const items = [...list.querySelectorAll<HTMLElement>('.row-item')];

    items.sort((a, b) => {
      if (key === 'name') {
        return (a.dataset.name ?? '').localeCompare(b.dataset.name ?? '');
      }
      if (key === 'favorite') {
        const aFav = a.dataset.favorite === 'true';
        const bFav = b.dataset.favorite === 'true';
        if (aFav !== bFav) {
          return aFav ? -1 : 1;
        }
        return Number(b.dataset.date) - Number(a.dataset.date);
      }
      return Number(b.dataset.date) - Number(a.dataset.date);
    });

    for (const item of items) {
      list.appendChild(item);
    }
  }

  buttons.forEach((btn) => {
    btn.addEventListener('click', () => {
      buttons.forEach((b) => b.classList.remove('active'));
      btn.classList.add('active');
      sortList(btn.dataset.sort ?? 'recent');
    });
  });

  // Initialize with favorite sort
  sortList('favorite');
</script>
